{
  "compilerOptions": {
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    // TODO: change this to true when all issues are fixed
    "noImplicitAny": false,
    "outDir": "build",
    "strict": true,
    "target": "es6",
    "lib": ["ESNext", "DOM"],
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["src/**/*"]
}
